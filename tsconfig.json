{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 2,
    "noEmit": true,
    "skipLibCheck": true,
    "disableSizeLimit": true 
  },
  "exclude": [
    "**/app/node_modules",
    "**/antd",
    "**/dll",
    "**/flow-typed",
    "**/scripts",
    "**/test",
    "**/internals"
  ]
}
